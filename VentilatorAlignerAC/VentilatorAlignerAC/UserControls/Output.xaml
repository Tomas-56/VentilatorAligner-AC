<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VentilatorAlignerAC.UserControls.Output">
    <Grid>
        <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition Width="auto" />
    </Grid.ColumnDefinitions>

    
    <Label x:Name="OutputDescription" Grid.Column="0" HorizontalOptions="Start" Margin="3,5,0,0"
                FontSize="18" Text="{Binding OutputDescriptionText}">

    </Label>

    <Label x:Name="OutputValue" Grid.Column="1" HorizontalOptions="Center" Margin="0,5,0,0"
                FontSize="18" Text="{Binding OutputValuetext}">

    </Label>

    <Label x:Name="Unit" Grid.Column="2" HorizontalOptions="End"
                FontSize="18"  Text="{Binding UnitText}" Margin="0,5,3,0">

    </Label>
   

    </Grid>
</ContentView>
